<div class="header">
  <div class="container">
    <h1>Add New Contact</h1>
  </div>
</div>

<div class="create">
  <div class="container">

    <%= form_for(@contact) do |f| %>
  <div class="field">
    <p><%= f.label :name %>: <%= f.text_field :name %></p>
    <p><%= f.label :email %>: <%= f.text_field :email %></p>
    <p><%= f.label :address %>: <%= f.text_field :address %></p>
    <p><%= f.label :phone %>: <%= f.text_field :phone %></p>
  </div>
  <div class="actions">
    <input type="submit" name="commit" value="Create" class="btn btn-add" />
    <a href="/contacts" class="btn pull-right">Back to Address Book</a>
  </div>
<% end %>


  </div>
</div>
