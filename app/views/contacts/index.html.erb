<div class="header">
    <h1>Address Book / Contacts List</h1>
</div>

<div class="contacts">
  <div class="container">

    <% @contacts.each do |contact| %>
      <div class="contact">
        <h3><%= contact.name %></h3>
        <p><%= contact.email %></p>
        <p><%= contact.address %></p>
        <p><%= contact.phone %></p>
        <p>
          <a href="/contacts/<%= contact.id %>/edit" class="btn btn-add btn-mini">Edit this Contact</a>
          <a href="/contacts/<%= contact.id %>"
            data-confirm="Are you sure?"
            data-method="delete"
            class="btn btn-mini pull-right"
            rel="nofollow">Delete</a>
        </p>
      </div>
    <% end %>

    <a href="contacts/new" class="btn btn-add">Add New Contact</a>
    <p><br></p>

  </div>
</div>
